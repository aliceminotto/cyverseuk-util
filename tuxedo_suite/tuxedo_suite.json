           "value": {
               "default":"agave://cyverseUK-Storage/data_shared/tuxedo_data/Danio_rerio.Zv9.66.gtf",
               "required":false,
               "visible":true
           }
       },
       {
           "id" : "maskfile",
           "details": {
               "description":"Masking file containing transcripts to be ignored (GTF)",
               "label":"Masking file"
           },
           "value": {
               "required":false,
               "visible":true
           }
       },
       {
           "id" : "maskfilec",
           "details": {
               "description":"Cuffdiff - Masking file containing transcripts to be ignored (GTF)",
               "label":"Masking file"
           },
           "value": {
               "required":false,
               "visible":true
           }
       }
    ],
    "parameters": [
        {
            "id" : "lab1",
            "details": {
              "description": "Enter an identifier for this condition - **Use _ instead of spa  ces** e.g. 2_hours",
              "showArgument":true,
